#
# mod_auth_cas is an Apache 2.0/2.2 compliant module that supports the
# CASv1 and CASv2 protocols
#
<IfModule !mod_ssl.c>
    LoadModule ssl_module modules/mod_ssl.so
</IfModule>

LoadModule auth_cas_module modules/mod_auth_cas.so

CASCookiePath <%= @cachebase %>/mod_auth_cas/
CASLoginURL <%= @loginurl %>
CASValidateURL <%= @validateurl %>
<% if @validatesaml -%>
CASValidateSAML On
<% end -%>
CASCertificatePath <%= @certificatepath %>
<% if @debug -%>
CASDebug On
<% end -%>
